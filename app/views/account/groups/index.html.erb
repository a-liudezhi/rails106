<div class="col-md-12">

  <h2 class="text-center"> 我收藏过的电影 </h2>
  <%= link_to("回到首页", root_path, class: "btn btn-primary pull-right") %>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Descrtion </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

   <tbody>
   <% @groups.each do |group| %>
    <tr>
      <td> # </td>
      <td> <%= link_to(group.title, group_path(group)) %> </td>
      <td> <%= render_group_description(group) %> </td>
      <td> <%= group.posts.count %> </td>
      <td> <%= group.updated_at %> </td>
    </tr>
    <% end %>
   </tbody>
  </table>

</div>
